    "version": "0.2.0",
    "configurations": [
        {
            "name": "ftp",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/myftp",
            "args": ["8887", "/home/pflorent"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "make gdb"
        },
        {
            "name": "msg queue",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/lib/msg_queue/msg_queue",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
